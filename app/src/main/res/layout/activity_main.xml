<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical">

    <com.marcinmoskala.arcseekbar.ArcSeekBar
        android:id="@+id/seekArc"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:padding="20dp"
        app:arcsb_progress="100"
        app:arcsb_progressBackgroundColor="@color/sliderBack"
        app:arcsb_progressBackgroundWidth="20dp"
        app:arcsb_progressWidth="20dp"
        app:arcsb_roundEdges="true" />

    <com.marcinmoskala.arcseekbar.ArcSeekBar
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:padding="20dp"
        app:arcsb_progressBackgroundColor="@color/colorPrimary"
        app:arcsb_progressColor="@color/colorAccent"
        app:arcsb_thumb="@drawable/thumb2" />

    <com.marcinmoskala.arcseekbar.ArcSeekBar
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:padding="20dp" />

</LinearLayout>